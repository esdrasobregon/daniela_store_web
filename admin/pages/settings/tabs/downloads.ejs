<div id="downloadsDiv" class="container-fluid" style="display: none;">
    <h1>downloads</h1>
    <div class="d-flex justify-content-center">
        <h3 class="text-info" id="addUpdateimagess">
            <%= keys.key.addUpdateimagess%>
        </h3>
    </div>
    <div class="d-flex justify-content-center">
        <h5 class="text-danger" id="imagesFormMessage" style="margin: 20px;"></h5>
        <button class="btn btn-warning" id="btnResetForm" onclick="clearForm()" style="visibility: hidden;">
            <%= keys.key.btnResetFormText%>
        </button>
    </div>



    <div class="form-group">
        <form id="add-images-form" class="container" style="margin: 20px">
            <div class="form-group">
                <label for="name">
                    <%= keys.key.placeHolderimagesName%>
                </label>
                <input type="text" class="form-control" , placeholder="<%= keys.key.placeHolderimagesName%>" id="name"
                    name="name" required>
            </div>
            <div class="form-group" style="display: none;">
                <input type="text" class="form-control" name="idimages" placeholder="Id images">
            </div>
            <div class="form-group">
                <label for="price">
                    <%= keys.key.placeHolderimagesPrice%>
                </label>
                <input type="number" class="form-control" placeholder="<%= keys.key.placeHolderimagesPrice%>"
                    name="price" id="price" required>
            </div>
            <div class="form-group">
                <label for="stateSelect" id="selectimagesCategoryMessage">
                    <%= keys.key.selectimagesCategoryMessage%>
                </label>
                <select class="form-control" id="categorySelect" name="categorySelect"></select>
            </div>
            <div class="form-group">
                <label for="showPrice" id="showimagesPriceMessage">
                    <%= keys.key.showimagesPriceMessage%>
                </label>
                <select class="form-control" name="showPrice" id="showPrice">
                    <option value="true">Yes</option>
                    <option value="false">Not</option>
                </select>
            </div>
            <div class="form-group">
                <label for="activ" id="imagesStateMessage">
                    <%= keys.key.imagesStateMessage%>
                </label>
                <select class="form-control" name="activ" id="activ">
                    <option value="1">Activ</option>
                    <option value="0">Inactiv</option>
                </select>
            </div>
            <div class="form-group">
                <label for="placeHolderimagesDescription">
                    <%= keys.key.placeHolderimagesDescription%>
                </label>
                <textarea type="text" class="form-control" placeholder="<%= keys.key.placeHolderimagesDescription%>"
                    id="description" name="description" required></textarea>
            </div>
            <div class="form-group" data-provide="datepicker">
                <label for="creationDate" id="creationdateMessage">
                    <%= keys.key.creationdateMessage%>
                </label>
                <input type="date" id="creationDate" name="creationDate" disabled="true" class="form-control">

            </div>
            <div class="form-group" data-provide="datepicker">
                <label for="modificationDate" id="lastModificationMessage">
                    <%= keys.key.lastModificationMessage%>
                </label>
                <input type="date" name="modificationDate" id="modificationDate" name="modificationDate" disabled="true"
                    class="form-control">

            </div>

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Upload</span>
                </div>
                <div class="custom-file">
                    <input type='file' accept=".jpg, .jpeg|image/*" class='custom-file-input' id='inputGroupFile01'
                        name="inputGroupFile01" onchange="readURL(this);" />
                    <label id="inputImage" class="custom-file-label" for="inputGroupFile01">
                        <%= keys.key.chooseFileMessage%>
                    </label>
                </div>
            </div>
            <div class="d-md-flex">
                <div class="overflow-auto p-3 mb-3 mb-md-0 mr-md-3 bg-light"
                    style="max-width: 100%; max-height: 350px;">
                    <img class="img-fluid" alt="Responsive image" id="imageFirebase" src="#" />
                </div>
            </div>

            <div class="container-fluid">
                <button type="submit" class="btn btn-outline-success my-2 my-sm-0" id="btnimagesPormSubmit">
                    <%= keys.key.btnimagesPormSubmit%>
                </button>
            </div>
        </form>
    </div>
</div>