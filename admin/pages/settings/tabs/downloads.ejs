<div id="downloadsDiv" class="container-fluid" style="display: none;">
    <h1>downloads</h1>
    <div class="d-flex justify-content-center">
        <h3 class="text-info">
            <%= keys.key.addUpdateimagess%>
        </h3>
    </div>

    <div class="form-group">
        <div class="form-group">
            <label for="downloadOptions">Select to download:</label>

            <select class="form-control" name="downloadOptions" id="downloadOptions">

            </select>
        </div>
    </div>
    <div class="form-group">
        <form id="download-form" class="container" style="margin: 20px">

            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text">Upload</span>
                </div>
                <div class="custom-file">
                    <input type='file' accept=".jpg, .jpeg|image/*" class='custom-file-input' id='inputDownload'
                        name="inputDownload" onchange="readImageURL(this, 'fileToDownload');" />
                    <label id="inputImage" class="custom-file-label" for="inputDownload">
                        <%= keys.key.chooseFileMessage%>
                    </label>
                </div>
            </div>

            <div class="d-md-flex">
                <div class="overflow-auto p-3 mb-3 mb-md-0 mr-md-3 bg-light"
                    style="max-width: 100%; max-height: 350px;">
                    <img class="img-fluid" alt="Responsive image" id="fileToDownload" src="#" />
                </div>
            </div>
            <div class="form-group">
                <select class="form-control" name="downloadActionToDo" id="downloadActionToDo">
                    <option value="0">Select an option</option>
                    <option value="1">Download</option>
                    <option value="2">Upload</option>
                    <option value="3">Delete</option>
                </select>
            </div>

            <div class="container-fluid">
                <button type="submit" class="btn btn-outline-success my-2 my-sm-0" id="btnDownload">
                    <%= keys.key.btnProductPormSubmit%>
                </button>
            </div>
        </form>
    </div>
</div>
<script src="../admin/pages/settings/tabs/downloads.js"></script>